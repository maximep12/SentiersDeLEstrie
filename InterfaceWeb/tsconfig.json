{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react-jsx",
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2018", 
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
